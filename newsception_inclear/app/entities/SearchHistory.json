{
  "name": "SearchHistory",
  "type": "object",
  "properties": {
    "topic": {
      "type": "string",
      "description": "The searched topic"
    },
    "search_count": {
      "type": "number",
      "default": 1,
      "description": "Number of times this topic was searched"
    },
    "last_searched": {
      "type": "string",
      "format": "date-time",
      "description": "Last time this was searched"
    }
  },
  "required": [
    "topic"
  ],
  "rls": {
    "create": {},
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}