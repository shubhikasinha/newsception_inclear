{
  "name": "UserPreferences",
  "type": "object",
  "properties": {
    "dark_mode": {
      "type": "boolean",
      "default": false,
      "description": "User's dark mode preference"
    },
    "favorite_topics": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "User's favorite topics"
    },
    "last_searches": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Recent search queries"
    }
  },
  "required": [],
  "rls": {
    "create": {
      "created_by": "{{user.email}}"
    },
    "read": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "update": {
      "$or": [
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "delete": {
      "user_condition": {
        "role": "admin"
      }
    }
  }
}